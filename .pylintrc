[MASTER]
ignore=CVS,.git,__pycache__,venv,.venv
persistent=yes

[MESSAGES CONTROL]
disable=
    too-few-public-methods,
    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    fixme,
    locally-disabled,
    suppressed-message

[REPORTS]
output-format=colorized
reports=no
score=yes

[BASIC]
good-names=i,j,k,ex,fp,id,_,db,hass
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=8
max-attributes=12
min-public-methods=0

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
